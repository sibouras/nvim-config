{
  "doctype": {
    "prefix": "doctype",
    "body": "<!DOCTYPE html>$0",
    "description": "HTML - Defines the document type",
    "scope": "text.html"
  },
  "html5": {
    "prefix": "html5",
    "body": [
      "<!DOCTYPE html>",
      "<html lang=\"${1:en}\">",
      "\t<head>",
      "\t\t<title>$2</title>",
      "\t\t<meta charset=\"UTF-8\" />",
      "\t\t<meta name=\"viewport\" content=\"width=device-width, initial-scale=1\" />",
      "\t\t<link href=\"${3:css/style.css}\" rel=\"stylesheet\" />",
      "\t</head>",
      "\t<body>",
      "\t\t$0",
      "\t</body>",
      "</html>"
    ],
    "description": "HTML - Defines a template for a html5 document",
    "scope": "text.html"
  },
  "meta": {
    "prefix": "meta",
    "body": "<meta name=\"$1\" content=\"$0\">",
    "description": "HTML - Defines meta information",
    "scope": "text.html"
  },
  "progress": {
    "prefix": "progress",
    "body": "<progress value=\"$1\" max=\"$2\">$0</progress>",
    "description": "HTML - Defines progress of a task of any kind",
    "scope": "text.html"
  },
  "textarea": {
    "prefix": "textarea",
    "body": "<textarea rows=\"$1\" cols=\"$2\">$0</textarea>",
    "description": "HTML - Defines a text area",
    "scope": "text.html"
  }
}
